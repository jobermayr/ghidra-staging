   global_scan = new XmlScan(i);
   handler = hand;
   handler->startDocument();
diff --git a/Ghidra/Features/Decompiler/src/decompile/cpp/xml.y b/Ghidra/Features/Decompiler/src/decompile/cpp/xml.y
index 12e57d179..772738324 100644

+	public BigInteger opInf(BigInteger a) {
+		BigDecimal val = new BigDecimal(a);
+		BigInteger res = (val == BigFloat.BIG_POSITIVE_INFINITY || val == BigFloat.BIG_NEGATIVE_INFINITY) ? BigInteger.ONE : BigInteger.ZERO;

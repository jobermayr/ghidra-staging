+++ b/Ghidra/Features/PDB/src/pdb/headers/pdb.h
@@ -66,4 +66,6 @@ private:
 	CComPtr<IDiaDataSource>   pSource;
 };
 
+void handleFindChildrenError(HRESULT res);
+
 #endif

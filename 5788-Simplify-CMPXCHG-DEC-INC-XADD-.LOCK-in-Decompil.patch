+:DEC^lockx_ Mem	is vexMode=0 & lockx_ & unlock_ & opsize=0 & byte=0xff; Mem & reg_opcode=1 ...
 {
-    build lockx;
-    build spec_m16;
-    OF = sborrow(spec_m16,1);
-    spec_m16 = spec_m16 - 1;
-    resultflags(spec_m16);
-    build unlock; 

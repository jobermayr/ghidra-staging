 {
-    build lockx;
-    build spec_m8;
-    OF = sborrow(spec_m8,1);
-    spec_m8 =  spec_m8 - 1;
-    resultflags( spec_m8);
-    build unlock; 
+    InterlockedDecrement(Mem);
 }
 
